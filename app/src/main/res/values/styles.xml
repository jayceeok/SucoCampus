<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Smile.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Smile.View_margin">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Smile.ImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Smile.ImageView.Photo_Large">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="Smile.ImageView.Photo_Middle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Smile.ImageView.Photo_Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="Smile.TextView._Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Smile.TextView._White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Smile.TextView._Gray">
        <item name="android:textColor">@color/base_color_text_gray</item>
    </style>

    <style name="Smile.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>


    <style name="MenuPop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_top_out</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/zoomout_right</item>
        <item name="android:windowExitAnimation">@anim/zoomin_right</item>
    </style>


    <!--轮播图-->
    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/selector_banner_point1</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_pointGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.LogoAnimation">
        <item name="android:windowBackground">@drawable/ll_logo</item>
    </style>


    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ToolbarControlStyle</item>
    </style>

    <style name="ToolbarControlStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">#FFF</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
              android:background="@drawable/weather_bg"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView android:id="@+id/current_weather" android:layout_width="wrap_content"
              android:layout_height="wrap_content"

           android:textColor="@color/white"   android:layout_margin="20dp"
              android:text="当前天气情况:"
        />

    <TextView android:id="@+id/city" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/current_weather"
              android:layout_margin="20dp"
              android:text="城市"
              android:textColor="@color/white"

        />


    <TextView android:id="@+id/current_city" android:layout_width="wrap_content"

              android:textColor="@color/white"      android:layout_height="wrap_content"
              android:layout_below="@id/city"
              android:layout_centerInParent="true"
              android:layout_margin="20dp"
              android:text="城市:"
              android:textSize="25sp"

        />
    <!--<ImageView android:id="@+id/current_weather_logo" android:layout_width="120dp"-->
               <!--android:layout_height="120dp"-->
               <!--android:layout_below="@id/current_city"-->

               <!--android:layout_centerInParent="true"-->
               <!--android:layout_margin="20dp"-->
               <!--android:background="#8a8a8a"-->
        <!--/>-->
    <TextView android:id="@+id/temperature" android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:layout_below="@id/current_city"
              android:layout_centerInParent="true"
              android:layout_margin="20dp"
android:textSize="30sp"
              android:gravity="center_horizontal|center_vertical"
              android:text="当前温度:"
              android:textColor="@color/white"
        />

    <TextView android:id="@+id/tv_pubTime" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginBottom="20dp"
              android:textColor="@color/white"
              android:padding="10dp"
              android:text="20160115172532"

        />
    <TextView android:id="@+id/pubTime" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="20dp"
              android:layout_toLeftOf="@id/tv_pubTime"
              android:padding="10dp"
              android:textColor="@color/white"
              android:text="发布时间"

        />

</RelativeLayout>